<h1>Edit movie</h1>

<% @movie.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>
<%= form_with(url: movie_path(@movie), method: :patch, data: {turbo: false}) do %>
  <div>
    <%= label_tag :title%>
    <%= text_field_tag :title, @movie.title %><!-- first arguement(query_title) is the name, second is the value-->
  </div>

  <div>
    <%= label_tag :description, "Description" %>
    <%= text_area_tag :description, @movie.description,  rows:3 %>
  </div>
<%= button_tag "Update Movie"%>

<% end %>
